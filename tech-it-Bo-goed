

CREATE TABLE public.cimodules (
    cimodulesid integer NOT NULL,
    provider character varying(100),
    encoding character varying(50),
    productid integer
);



CREATE TABLE public.mountingmethod (
    mountingmethod integer NOT NULL,
    televisionid integer,
    wallbracketid integer
);


CREATE TABLE public.products (
    productid integer NOT NULL,
    name character varying(100),
    brand character varying(50),
    price numeric,
    currentstock integer,
    datesold date,
    type character varying
);

CREATE TABLE public.remotecontroller (
    remotecontrollerid integer NOT NULL,
    smart bit(1),
    baterrytype character varying(50),
    productid integer,
    televisionid integer
);


CREATE TABLE public.television (
    televisionid integer NOT NULL,
    height numeric,
    weight numeric,
    screenquality character varying(50),
    screentype character varying(50),
    wifi bit(1),
    smarttv bit(1),
    voicecontrol bit(1),
    hdr bit(1),
    productid integer,
    remotecontrollerid integer,
    cimodulesid integer
);


CREATE TABLE public.users (
    userid integer NOT NULL,
    username character varying(50),
    password character varying(50),
    adress character varying(50),
    jobtitle character varying(50),
    payscale integer,
    vacationdays integer
);


CREATE TABLE public.wallbracket (
    wallbracketid integer NOT NULL,
    adjustable bit(1),
    height numeric,
    weight numeric,
    productid integer
);



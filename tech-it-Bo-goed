ALTER TABLE ONLY public.cimodules
    ADD CONSTRAINT cimodules_pkey PRIMARY KEY (cimodulesid);

ALTER TABLE ONLY public.mountingmethod
    ADD CONSTRAINT mountingmethod_pkey PRIMARY KEY (mountingmethod);

ALTER TABLE ONLY public.products
    ADD CONSTRAINT products_pkey PRIMARY KEY (productid);

ALTER TABLE ONLY public.remotecontroller
    ADD CONSTRAINT remotecontroller_pkey PRIMARY KEY (remotecontrollerid);

ALTER TABLE ONLY public.television
    ADD CONSTRAINT television_pkey PRIMARY KEY (televisionid);

ALTER TABLE ONLY public.users
    ADD CONSTRAINT users_pkey PRIMARY KEY (userid);

ALTER TABLE ONLY public.users
    ADD CONSTRAINT users_username_key UNIQUE (username);

ALTER TABLE ONLY public.wallbracket
    ADD CONSTRAINT wallbracket_pkey PRIMARY KEY (wallbracketid);

ALTER TABLE ONLY public.cimodules
    ADD CONSTRAINT cimodules_productid_fkey FOREIGN KEY (productid) REFERENCES public.products(productid);

ALTER TABLE ONLY public.mountingmethod
    ADD CONSTRAINT mountingmethod_televisionid_fkey FOREIGN KEY (televisionid) REFERENCES public.television(televisionid);

ALTER TABLE ONLY public.mountingmethod
    ADD CONSTRAINT mountingmethod_wallbracketid_fkey FOREIGN KEY (wallbracketid) REFERENCES public.wallbracket(wallbracketid);

ALTER TABLE ONLY public.remotecontroller
    ADD CONSTRAINT remotecontroller_productid_fkey FOREIGN KEY (productid) REFERENCES public.products(productid);

ALTER TABLE ONLY public.remotecontroller
    ADD CONSTRAINT remotecontroller_televisionid_fkey FOREIGN KEY (televisionid) REFERENCES public.television(televisionid);

ALTER TABLE ONLY public.television
    ADD CONSTRAINT television_cimodulesid_fkey FOREIGN KEY (cimodulesid) REFERENCES public.cimodules(cimodulesid);

ALTER TABLE ONLY public.television
    ADD CONSTRAINT television_productid_fkey FOREIGN KEY (productid) REFERENCES public.products(productid);

ALTER TABLE ONLY public.television
    ADD CONSTRAINT television_remotecontrollerid_fkey FOREIGN KEY (remotecontrollerid) REFERENCES public.remotecontroller(remotecontrollerid);

ALTER TABLE ONLY public.wallbracket
    ADD CONSTRAINT wallbracket_productid_fkey FOREIGN KEY (productid) REFERENCES public.products(productid);

